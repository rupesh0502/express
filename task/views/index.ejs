<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="/stylesheets/style.css"> -->
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <h1>This is index page</h1>
            <form action="/create" method="post">
                <input name="title" class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="Title">
                <textarea name="details" class="block w-full rounded-md outline-none mt-2 px-5 py-2 bg-zinc-800 resize-none" placeholder="Write your task details"></textarea>
                <input name="" class="mt-2 bg-blue-600 px-5 py-2" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks flex flex-wrap gap-3 p-10">
            <% if(files.length > 0) { %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-2xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between mt-3">
                            <a class="text-blue-500 inline-block" href="/file/<%= val %>">Read More...</a>
                            <a class="text-zinc-500 inline-block" href="/edit/<%= val %>">Edit Filename</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-500">No tasks available...</h3>
            <% } %>
        </div>
    </div>
    <script src="/javascripts/script.js"></script>
</body>
</html>